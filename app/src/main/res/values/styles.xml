<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BudgetBuddy.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">@dimen/margin_extra_large_32</item>
        <item name="android:layout_width">300dp</item>
    </style>

    <style name="BudgetBuddy.DropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_marginTop">@dimen/margin_extra_large_32</item>
        <item name="android:layout_width">300dp</item>
    </style>

    <style name="FullScreenDialog" >
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="BudgedBuddy.Button.IconOnly" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="iconTint">?attr/colorItemBackground</item>
        <item name="android:layout_margin">@dimen/margin_small_8</item>
    </style>

    <style name="BudgetBuddy.Button.IconOnly.Outlined" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/light_primary</item>
    </style>

    <style name="BudgetBuddy.ToolbarTitleTextAppearance" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">@dimen/text_size_large_22</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>
